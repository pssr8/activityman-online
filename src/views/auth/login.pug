extends ../base.pug

block title
    | Log In

block chassis
    .login-div 
        p=addText||''
        form(action="/login", method="post").login 
            label(for="usrn") Username:
            br
            input#usrn(type="text", name="username")
            br
            br
            label(for="pswd") Password:
            br
            input#pswd(type="text", name="password")
            br
            br
            button(type="submit") Submit