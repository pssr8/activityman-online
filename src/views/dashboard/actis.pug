extends ./base.pug

block title 
    | Activities T*T

block cuerpo 
    - let actis = await DB.actis.getAll();
    table(border="1")
        thead
            tr
                th Edit
                th Name
        tbody
            each acti in actis 
                tr
                    td 
                        a(href=`/acti-edit/${encodeURIComponent(acti.id)}`) 
                            button /acti-edit/#{encodeURIComponent(acti.id)}
                    td 
                        each name in acti.name.values
                            div
                                b #{name.text}
                            div Lang: #{name.lang}
    pre #{JSON.stringify(actis[0], null, 4)}