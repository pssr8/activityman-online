extends ./base.pug

block cuerpo 
    p Languages T*T
    table(border="1")
        thead
            tr
                th ID
                th Code
                th Name
                th Main
        tbody 
            each lang in langs
                tr
                    td #{lang.id}
                    td #{lang.code}
                    td #{lang.name}
                    td #{lang.main}
    pre #{JSON.stringify(langs, null, 4)}