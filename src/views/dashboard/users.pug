extends ./base.pug

block cuerpo 
    h2 Users
    table 
        thead 
            tr 
                th name
                th username
                th permissions
                th delete
        tbody 
            tr 
                each user in users
                    td #{user.name}
                    td #{user.username}
                    td #{JSON.stringify(user.permissions)}
                    td
                        button X
    
    .add-user 
        | add user T*T